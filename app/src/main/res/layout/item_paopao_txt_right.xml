<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上午11:20"
        android:visibility="gone"
        android:layout_marginBottom="18dp"
        android:textColor="#7b7b7b" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/ivHead"
            android:gravity="right|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivState"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/selector_chatroom_retry"
                android:visibility="invisible" />

            <FrameLayout
                android:id="@+id/paopaoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_chatroom_paopao_txt_right">

                <TextView
                    android:id="@+id/tvContent"
                    android:minHeight="44dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="left|center"
                    android:padding="8dp"
                    android:text="提供图书、电影、音乐唱片的推荐、评论和价格比较,以及城市独特的文化生活。... 豆瓣 汇集一亿人的生活趣味"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

            </FrameLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>